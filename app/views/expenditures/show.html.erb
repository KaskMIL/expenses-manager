<div class='new-sess'>
  <header class='container d-flex justify-content-between align-items-center index-cat'>
    <%= render 'shared/dropdown_menu' %>
    <h1 class='mb-0 title'>EXPENDITURES</h1>
    <i class="fa-solid fa-magnifying-glass"></i>
  </header>

  <main class='container'>

    <p style="color: green"><%= notice %></p>

    <%= render @expenditure %>

    <div class='sub-cat-cont mb-4'>
      <%= button_to "Destroy this expenditure", @expenditure, method: :delete, class: 'btn btn-danger sub-btn' %>
    </div>

    <div class='back-cat-btn '>
      <%= link_to "Back to expenditures", expenditures_path, class:'btn btn-outline-secondary back-btn' %>
    </div>
  </main>
</div>
