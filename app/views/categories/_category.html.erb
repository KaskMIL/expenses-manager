<div class='cat-card-cont border rounded' id="<%= dom_id category %>">

    <div>
      <img src='<%= category.icon %>' alt='<%= category.name %>'>

      <%= link_to category.name, category_path(category.id)%>

      <% if category.expenditures.count.zero? %>
        <p>$0</p>
      <% else %>
        <p><%=  %></p>
      <% end %>
    </div>

    <div>
      <%= button_to 'Remove', category_path(category.id), method: :delete %>
    </div>

</div>
