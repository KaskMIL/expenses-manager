<div id="<%= dom_id category %>">
  <div>
    <div>
      <img src='<%= category.icon %>' alt='<%= category.name %>'>
      <%= link_to category.name, category_path(category)%>
      <% if category.expenditures.count.zero? %>
        <p>$0</p>
      <% else %>
        <%# <p><%= category.expenditures.amount.sum %>
      <% end %>
    </div>
    <div>
      <%= button_to 'Remove', category_path(category), method: :delete %>
    </div>
  </div>

</div>
