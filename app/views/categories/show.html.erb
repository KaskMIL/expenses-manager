<div class='new-sess'>
  <header class='container d-flex justify-content-between align-items-center index-cat'>
    <%= render 'shared/dropdown_menu' %>
    <h1 class='mb-0 title'>CATEGORY</h1>
    <i class="fa-solid fa-magnifying-glass"></i>
  </header>

  <main class='container pb-5'>
    <p style="color: green"><%= notice %></p>

    <%= render @category %>

    <div class='total-exp d-flex justify-content-between rounded'>
      <h2 class='exp-title'>Total spend:</h2>
      <h2>$<%= @total_amount %></h2>
    </div>

    <div class='exp-container'>
      <% @expenditures.each do |spend|%>
        <div class='exp-card-cont d-flex justify-content-between p-3 border rounded'>
          <h2 class='exp-title'><%= spend.name %></h2>
          <h2>$<%= spend.amount %></h2>
        </div>
      <% end %>
    </div>

    <div class='sub-cat-cont mb-4'>
      <%= link_to 'New expense', new_expenditure_path, class: 'btn btn-green sub-btn'%>
    </div>

    <div class='back-cat-btn '>
      <%= link_to "Back to categories", categories_path, class:'btn btn-outline-secondary back-btn' %>
    </div>
  </main>
</div>
