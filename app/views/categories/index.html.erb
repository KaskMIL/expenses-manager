<div class='new-sess'>
  <header class='container d-flex justify-content-between align-items-center index-cat'>
    <%= render 'shared/dropdown_menu' %>
    <h1 class='mb-0 title'>CATEGORIES</h1>
    <i class="fa-solid fa-magnifying-glass"></i>
  </header>

  <main class='container'>

    <p style="color: green"><%= notice %></p>

    <div id="categories">
      <% @categories.each do |category| %>
        <%= render category %>
      <% end %>
    </div>

    <%= link_to "New category", new_category_path %>
  </main>
</div>